<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hais.studyandroid02.ui">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.view.TopTitleActivity"
            android:label="@string/title_activity_top_title" />
        <activity
            android:name=".ui.view.RatingActivity"
            android:label="@string/title_activity_rating" />
        <activity
            android:name=".ui.view.RatingGethubActivity"
            android:label="@string/title_activity_rating_gethub" />
        <activity
            android:name=".ui.view.SwipeMenuListViewActivity"
            android:label="@string/title_activity_swipe_menu_list_view" />
        <activity
            android:name=".ui.view.OkHttpActivity"
            android:label="@string/title_activity_ok_http" />
        <activity
            android:name=".ui.view.CartListActivity"
            android:label="@string/title_activity_cart_list" />
        <activity
            android:name=".ui.view.CartList2Activity"
            android:label="@string/title_activity_cart_list2" />
        <activity
            android:name=".ui.view.DynamicLoadingLayoutActivity"
            android:label="@string/title_activity_dynamic_loading_layout" />
        <activity
            android:name="com.hais.studyandroid02.utils.BaseActivity"
            android:label="@string/title_activity_base" />
        <activity
            android:name=".ui.view.TitleActivity"
            android:label="@string/title_activity_title" />
        <activity
            android:name=".ui.view.TextViewActivity"
            android:label="@string/title_activity_text_view" />
        <activity
            android:name=".ui.view.SeekBarActivity"
            android:label="@string/title_activity_seek_bar" />
        <activity
            android:name=".ui.view.LoadingActivity"
            android:label="@string/title_activity_loading" />
        <activity android:name=".ui.view.AlphaChageActivity" />
        <activity
            android:name=".ui.view.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".ui.view.TestLoginActivity" />
        <activity android:name=".ui.view.BannerActivity" />
        <activity android:name=".ui.view.FragmentActivity"></activity>
    </application>

</manifest>