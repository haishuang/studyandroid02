<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rb="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 >


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/coloredRatingBar1"
        android:layout_alignParentTop="true"
        android:text="Ratingbar with listener"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <com.hais.studyandroid02.widget.ColoredRatingBar
        android:id="@+id/coloredRatingBar1"
        style="@style/coloredRatingBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="14dp"
        rb:rating="3.8"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/coloredRatingBar2"
        android:layout_below="@+id/coloredRatingBar1"
        android:layout_marginTop="14dp"
        android:text="Indicator ratingbar"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <com.hais.studyandroid02.widget.ColoredRatingBar
        android:id="@+id/coloredRatingBar2"
        style="@style/coloredRatingBarStyleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/coloredRatingBar1"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="27dp"
        rb:rating="1.2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/coloredRatingBar3"
        android:layout_below="@+id/coloredRatingBar2"
        android:layout_marginTop="20dp"
        android:text="Ratingbar small"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <com.hais.studyandroid02.widget.ColoredRatingBar
        android:id="@+id/coloredRatingBar3"
        style="@style/coloredRatingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/coloredRatingBar2"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="25dp"
        rb:rating="4.2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/coloredRatingBar4"
        android:layout_below="@+id/coloredRatingBar3"
        android:layout_marginTop="19dp"
        android:text="Ratingbar small indicator"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <com.hais.studyandroid02.widget.ColoredRatingBar
        android:id="@+id/coloredRatingBar4"
        style="@style/coloredRatingBarStyleSmallIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/coloredRatingBar3"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="20dp"
        rb:rating="3.2" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/coloredRatingBar1"
        android:layout_marginRight="16dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
