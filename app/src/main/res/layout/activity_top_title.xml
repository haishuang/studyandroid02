<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="49dp">

    <LinearLayout
        android:id="@+id/ll_top_back"
        android:layout_width="81dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="13dp">

        <ImageView
            android:id="@+id/iv_top_left_back"
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:src="@drawable/back_arrow" />

        <TextView
            android:id="@+id/tv_top_left_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="4dp"
            android:text="返回"
            android:textSize="20sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_top_r1"
        android:layout_width="38dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:paddingLeft="6dp"
        android:paddingRight="12dp"
        android:src="@drawable/zhish_location_black" />

    <ImageView
        android:id="@+id/iv_top_r2"
        android:layout_width="38dp"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/iv_top_r1"
        android:paddingLeft="6dp"
        android:paddingRight="12dp"
        android:src="@drawable/base_title_erweima_logo" />

    <TextView
        android:id="@+id/tv_top_title"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="标题"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_top_search"
        android:layout_width="200dp"
        android:layout_height="24dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/home_home_top_edittext"
        android:drawableLeft="@drawable/home_home_top_search"
        android:editable="false"
        android:textSize="14sp" />
</RelativeLayout>
